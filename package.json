    "node": ">=18.16.1"
  },
  "devDependencies": {
    "@meyfa/eslint-config": "8.0.1",
    "@types/mocha": "10.0.10",
    "@types/node": "22.17.1",
    "c8": "10.1.3",
    "eslint": "9.33.0",
    "mocha": "11.7.1",
